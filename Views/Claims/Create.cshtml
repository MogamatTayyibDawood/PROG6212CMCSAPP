@{
    ViewBag.Title = "Submit Claim - CMCS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-gradient text-black">
            <h2>Submit Claim</h2><!--form for sumbitting the claims-->
        </div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="hoursWorked">Hours Worked</label>
                    <input type="number" class="form-control" id="hoursWorked" placeholder="Enter hours worked"> <!--Created form for submitting claims with fields for hours worked and hourly rate-->
                </div>
                <div class="form-group">
                    <label for="hourlyRate">Hourly Rate</label>
                    <input type="text" class="form-control" id="hourlyRate" placeholder="Enter your hourly rate">
                </div>
                <div class="form-group">
                    <label for="supportingDocument">Upload Supporting Document</label>
                    <input type="file" class="form-control-file" id="supportingDocument">
                </div>
                <button type="submit" class="btn btn-success btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>
