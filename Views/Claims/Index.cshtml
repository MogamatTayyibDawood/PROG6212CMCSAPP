@model IEnumerable<PROG6212CMCSAPP.Models.Claim>

<div class="container mt-5">
    <h2>All Claims</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Lecturer Name</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Document</th>
                <th>Submission Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.LecturerName</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td>
                    <td>@claim.TotalAmount.ToString("C")</td>
                    <td>@claim.Status</td>
                    <td>
                        @if (claim.DocumentData != null)
                        {
                            <a href="@Url.Action("Download", "Claims", new { id = claim.ClaimId })">Download</a>
                        }
                        else
                        {
                            <span>No document</span>
                        }
                    </td>
                    <td>@claim.SubmissionDate.ToString("g")</td>
                    <td>
                        @if (claim.Status == "Pending")
                        {
                            <form asp-action="UpdateStatus" method="post">
                                <input type="hidden" name="id" value="@claim.ClaimId" />
                                <button type="submit" name="status" value="Approved" class="btn btn-sm btn-success">Approve</button>
                                <button type="submit" name="status" value="Rejected" class="btn btn-sm btn-danger">Reject</button>
                            </form>
                        }
                        else
                        {
                            <span>@claim.Status on @claim.ApprovalDate?.ToString("g")</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
