@model IEnumerable<PROG6212CMCSAPP.Models.Claim>

<div class="container mt-5">
    <h2>Pending Claims</h2>
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Lecturer</th>
                <th>Hours</th>
                <th>Total Amount</th>
                <th>Submission Date</th>
                <th>Document</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.LecturerName</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.TotalAmount.ToString("C")</td>
                    <td>@claim.SubmissionDate.ToString("g")</td>
                    <td>
                        @if (claim.DocumentData != null)
                        {
                            <a href="@Url.Action("Download", "Claims", new { id = claim.ClaimId })">Download</a>
                        }
                        else
                        {
                            <span>No document</span>
                        }
                    </td>
                    <td>
                        <form asp-action="UpdateStatus" method="post">
                            <input type="hidden" name="id" value="@claim.ClaimId" />
                            <button type="submit" name="status" value="Approved" class="btn btn-success btn-sm">Approve</button>
                            <button type="submit" name="status" value="Rejected" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
