@{
    ViewBag.Title = "Help & Support - CMCS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Help & Support</h2><!--Implemented help and support section with FAQ-->
    <p>If you need help, please contact our support team at <a href="mailto:support@cmcsapp.com">support@cmcsapp.com</a>.</p><!--Contact info-->

    <h3>Frequently Asked Questions</h3>
    <div class="accordion" id="faqAccordion">
        <div class="card">
            <div class="card-header" id="headingOne">
                <h2 class="mb-0">
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        How do I submit a claim?
                    </button>
                </h2>
            </div>

            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#faqAccordion">
                <div class="card-body">
                    To submit a claim, go to the "Submit Claim" page, fill out the form, and click "Submit".
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" id="headingTwo">
                <h2 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        How can I check the status of my claim?
                    </button>
                </h2>
            </div>
            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#faqAccordion">
                <div class="card-body">
                    You can check the status of your claim by visiting the "My Claims" page.
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" id="headingThree">
                <h2 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        What should I do if my claim is rejected? <!--Examples-->
                    </button>
                </h2>
            </div>
            <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#faqAccordion">
                <div class="card-body">
                    If your claim is rejected, you will receive an email with the reason for rejection. You can then correct the issues and resubmit your claim.
                </div>
            </div>
        </div>
    </div>
</div>
