@{
    ViewBag.Title = "Home - CMCS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-section text-center" style="background-image: url('/images/hero-bg.jpg'); background-size: cover; background-attachment: fixed; padding: 100px 0; color: white; position: relative;"><!--Hero section-->
    <div style="background-color: rgba(0, 0, 0, 0.5); position: absolute; top: 0; left: 0; right: 0; bottom: 0;"></div> <!--Adjusted padding-->
    <div class="container position-relative" style="z-index: 1;">
        <h1 class="display-3" style="font-family: 'Poppins', sans-serif;">Welcome to the Contract Monthly Claim System</h1>
        <p class="lead">Easily submit, track, and manage your monthly claims.</p>
        <p><a class="btn btn-gradient btn-lg" href="@Url.Action("Create", "Claims")" role="button">Submit a Claim</a></p>
    </div>
</div>

<div class="container mt-5"> <!--home page cards-->
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg p-4">
                <i class="fas fa-file-alt fa-3x text-primary"></i>
                <h3 class="mt-3">Submit Claims</h3>
                <p>Enter your work hours and submit your monthly claim for review with just a few clicks.</p>
                <a class="btn btn-gradient" href="@Url.Action("Create", "Claims")">Submit a Claim</a>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg p-4">
                <i class="fas fa-eye fa-3x text-primary"></i>
                <h3 class="mt-3">View Claims</h3>
                <p>Track the status of your submitted claims in real-time from anywhere, at any time.</p>
                <a class="btn btn-gradient" href="@Url.Action("Index", "Claims")">View My Claims</a>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg p-4">
                <i class="fas fa-life-ring fa-3x text-primary"></i>
                <h3 class="mt-3">Help & Support</h3>
                <p>Need assistance? Our support team is here to help you navigate the system effortlessly.</p>
                <a class="btn btn-gradient" href="@Url.Action("Help", "Home")">Get Help</a>
            </div>
        </div>
    </div>
</div>
