@{
    ViewBag.Title = "Home - CMCS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--REFERENCES: https://learn.microsoft.com/en-us/aspnet/web-pages/overview/getting-started/introducing-aspnet-web-pages-2/form-basics-->
<!--https://stackoverflow.com/questions/31190979/how-to-handle-form-submission-data-asp-net-->
<!--https://www.w3schools.com/asp/webpages_layout.asp-->
<!--https://www.tutorialspoint.com/asp.net_wp/asp.net_wp_layouts.htm-->
